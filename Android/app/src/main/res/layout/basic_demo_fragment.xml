<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <Button
            android:id="@+id/basic_demo_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lancer Basic demo"/>

        <Button
            android:id="@+id/basic_demo_btn_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lancer Basic demo 2"/>

        <Button
            android:id="@+id/basic_demo_btn_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lancer Basic demo 3"/>

    </LinearLayout>

    <TextView
        android:id="@+id/basic_demo_tv_result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

</LinearLayout>